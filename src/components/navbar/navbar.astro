---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Give a Talk",
    path: "/talk",
  },
  {
    title: "Host a Meetup",
    path: "/host",
  },
  {
    title: "About",
    path: "/about",
  },
  /*{
    title: "Blog",
    path: "/webdemo/blog",
  },*/
];
---

<style>
  .zueri{
    color: #0070b4;
  }
</style>

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <span class="font-bold text-slate-800"> Zurich R User </span>
          <span class="text-slate-600 zueri">Group</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {/* {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )} */}

                {
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {/* {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )} */}
                    </a>
                  </li>
                }
              </>
            ))
          }
        </ul>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="https://bsky.app/profile/ruserszurich.bsky.social"><Icon class="text-black" name="simple-icons:bluesky" /></a>
        <a href="https://www.linkedin.com/company/zuerich-r-user-group"><Icon class="text-black" name="bx:bxl-linkedin" /></a>
        <a href="https://github.com/zurich-r-user-group"><Icon class="text-black" name="simple-icons:github" /></a>
      </div>
    </div>
  </header>
</Container>
